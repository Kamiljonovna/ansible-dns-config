options {
  listen-on port 53 { any; };
  allow-query { any; };
  recursion yes;
  forwarders {
    {% for forwarder in dns_forwarders %}
    {{ forwarder }};
    {% endfor %}
  };
};

zone "{{ zone_name }}" IN {
  type master;
  file "db.forward";
};

zone "{{ reverse_zone_name }}" IN {
  type master;
  file "db.reverse";
};
